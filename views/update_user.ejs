<!-- Main site -->
    
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All User</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to update acoount</span>
        </div>

        <!-- Form handaling -->
        <form id="update_user" method="POST">
            <div class="new_user">
                <div class="form-group">
                    <label for="bssid" class="text-light">Bssid</label>
                    <input type="text" name="bssid" placeholder="a101" value="<%= user.bssid %>">
                </div>
                <div class="form-group">
                    <label for="name" class="text-light">Name</label>
                    <input type="hidden" name="id" value="<%= user._id %>">
                    <input type="text" name="name" placeholder="Ayush Raiyani" value="<%= user.name %>">
                </div>
                <div class="form-group">
                    <label for="number" class="text-light">Mobile no.</label>
                    <input type="number" name="number" placeholder="9292945995" value="<%= user.number %>">
                </div>
                <div class="form-group">
                    <label for="attendence" class="text-light">Attendance</label>
                    <div class="radio inline">
                        <input type="radio" id="radio-2" name="attendence" value="P" <%= user.attendence =='P'?'checked':'' %> >
                        <label for="radio-2" class="radio-label">Present</label>
                    </div>
                    <div class="radio inline">
                        <input type="radio" id="radio-3" name="attendence" value="A" <%= user.attendence=="A"?'checked':'' %> >
                        <label for="radio-3" class="radio-label">Absent</label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
            </div>
        </form>
    </div>
</main>

<!-- !Main site -->




